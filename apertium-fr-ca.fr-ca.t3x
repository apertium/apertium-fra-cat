					</when>
					<otherwise>
						<out>
							<lu>
								<clip pos="1" part="whole"/>
							</lu>
							<b pos="1"/>
							<lu>
								<clip pos="2" part="whole"/>
							</lu> 
						</out>
					</otherwise>
				</choose>
			</action>
		</rule> 

